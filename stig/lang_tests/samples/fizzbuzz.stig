package #1;

fizz = (("fizzbuzz" if x % 15 == 0
  else ("fizz" if x % 3 == 0
    else ("buzz" if x % 5 == 0
      else x as str)
  )
)) where {
  x = given::(int);
};

test {
  t1: fizz(.x:[1..15]) as [str] == ["1", "2", "fizz", "4", "buzz", "fizz", "7", "8", "fizz", "buzz", "11", "fizz", "13", "14", "fizzbuzz"];
};