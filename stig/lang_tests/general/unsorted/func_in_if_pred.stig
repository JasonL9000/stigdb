obj is <{
    .first: int,
    .sec: int
}>;

ob0 = <{
    .first: 7,
    .sec: 11
}>;

ob1 = <{
    .first: 4,
    .sec: 3
}>;

get_first =
    (ob.first)
    where {
        ob = given::(obj);
    };

test {
    t0: (true if length_of [ob0, ob1] == 2 else false); /* this works */
    t1: (true if ob0.first == 7 else false); /* this works */
    t2: (true if get_first(.ob: ob0) == 7 else false); /* error */
};