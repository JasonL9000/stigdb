package #1;


my_func = ("hey everyone hello everyone" match "hel+o") as [str];

match_func = ((foo match bar) as [str]) where {
  foo = given::(str);
  bar = given::(str);
};

my_greeting = "hello mpark!" + "hello jason!" + "helllllo tidder!" + "hellllloooo nurse!";
my_reg = "hel+o+";

test {
 t1: my_func == ["hello"];
 t2: ("hey everyone hello everyone" match "hel+o") as [str] == ["hello"];
 t3: ("hey everyone hello everyone and helllo to you" match "hel+o") as [str] == ["hello", "helllo"];
 t4: ("what the heck is going on" match "hel+o") as [str] == empty [str];
 t5: (my_greeting match my_reg) as [str] == ["hello", "hello", "helllllo", "hellllloooo"];
};
