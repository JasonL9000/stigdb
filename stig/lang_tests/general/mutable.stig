try_store_mutable = ((true) effecting { new <[1]> <- foo; }) where {
  foo = *<[0]>::(int);
};

with {
  <[0]> <- 1;
} test {
  t1: (a == <[0]>) where {
    a = known &foo;
    foo = *<[0]>::(int?);
  };
  t2: (not a) where {
    a = &foo is unknown;
    foo = *<[0]>::(int?);
  };
  t3: (a) where {
    a = &foo is unknown;
    foo = *<[1]>::(int?);
  };
  t4: *<[0]>::(int) + *<[0]>::(int) == 2;
  t5: try_store_mutable {
    t6: *<[1]>::(int) == 1;
  };
};